{
  "name": "keypick",
  "productName": "keypick",
  "version": "1.0.0",
  "description": "Hello World!",
  "main": "src/main.js",
  "author": "sasshu",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.1.6",
    "electron-builder": "^25.0.0-alpha.9",
    "tailwindcss": "^3.4.3"
  },
  "build": {
    "appId": "com.sasshu.keypick",
    "directories": {
      "output": "dist"
    },
    "files": [
      "asset",
      "src",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "icon": "asset/icon/mac/app.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "asset/icon/windows/app.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "node_modules/.bin/electron-builder"
  },
  "dependencies": {
    "electron-reload": "^2.0.0-alpha.1",
    "electron-store": "^8.2.0"
  }
}
